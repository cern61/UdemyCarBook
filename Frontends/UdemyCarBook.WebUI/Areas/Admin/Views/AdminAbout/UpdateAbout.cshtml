@model UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">

                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Hakkımızda Güncelleme</h4>
                        <p class="card-subtitle mb-4">Hakkımızda ile ilgili özellikleri eksiksiz doldurmanız önemlidir. </p>

                        <form method="post">
							<input type="hidden" asp-for="aboutID" />
                            <div class="form-group">
                                <label for="exampleInputTitle">Başlık</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="title" placeholder="Başlık Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputDescription">Açıklama</label>
                                <textarea rows="5" asp-for="description" class="form-control" placeholder="Açıklama Giriniz"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputimageUrl">Kapak Fotoğrafı</label>
                                <input type="text" class="form-control" id="exampleInputimageUrl" asp-for="imageUrl" placeholder="Kapak Fotoğrafı Linki Giriniz">
                            </div>

                            <button type="submit" class="btn btn-success waves-effect waves-light">Hakkımızda Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>











