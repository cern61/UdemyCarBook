@model UdemyCarBook.Dto.SocialMediaDtos.CreateSocialMediaDto
@{
    ViewData["Title"] = "CreateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">

                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Yeni Sosyal Medya Hesap Girişi</h4>
                        <p class="card-subtitle mb-4">Sosyal Medya Hesap ile ilgili özellikleri eksiksiz doldurmanız önemlidir. </p>

                        <form method="post">

                            <div class="form-group">
                                <label for="exampleInputName">Sosyal Medya</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Sosyal Medya Hesap Adı Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUrl">URL</label>
                                <input type="text" class="form-control" id="exampleInputUrl" asp-for="Url" placeholder="Sosyal Medya Hesap URL Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputIcon">Sosyal Medya Hesap Ikon</label>
                                <input type="text" class="form-control" id="exampleInputIcon" asp-for="Icon" placeholder="Sosyal Medya Hesap Icon Giriniz">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Sosyal Medya Hesap Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>







