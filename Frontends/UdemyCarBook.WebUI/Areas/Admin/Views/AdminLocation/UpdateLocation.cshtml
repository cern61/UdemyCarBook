@model UpdateLocationDto
@{
    ViewData["Title"] = "UpdateLocation";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">

                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Yeni Lokasyon Girişi</h4>
                        <p class="card-subtitle mb-4">Lokasyon ile ilgili özellikleri eksiksiz doldurmanız önemlidir. </p>

                        <form method="post">
                            <input type="hidden" asp-for="LocationID" />
                            <div class="form-group">
                                <label for="exampleInputName">Lokasyon</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Lokasyon Giriniz">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Lokasyon Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>







